@model List<ProductGetDto>

@{
    ViewData["Title"] = "Products Management";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="h3 mb-0">
                <i class="fas fa-box"></i> Products Management
            </h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Product
            </a>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-info-circle"></i> No products found. <a href="#" class="alert-link">Create one now</a>.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 10%;">Image</th>
                            <th style="width: 20%;">Product Name</th>
                            <th style="width: 15%;">Category</th>
                            <th style="width: 12%;">Price</th>
                            <th style="width: 15%;">Created Date</th>
                            <th style="width: 15%;">Created By</th>
                            <th style="width: 13%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <!-- Image Column -->
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImagePath))
                                    {
                                        <img src="@product.ImagePath" alt="@product.Name" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <div class="bg-light text-muted text-center" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }
                                </td>

                                <!-- Product Name -->
                                <td>
                                    <strong>@product.Name</strong>
                                    <br />
                                    <small class="text-muted">@(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)</small>
                                </td>

                                <!-- Category -->
                                <td>
                                    <span class="badge bg-info">@product.CategoryName</span>
                                </td>

                                <!-- Price -->
                                <td>
                                    <span class="fw-bold text-success">$@product.Price.ToString("F2")</span>
                                </td>

                                <!-- Created Date -->
                                <td>
                                    <small>@product.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>

                                <!-- Created By -->
                                <td>
                                    <small>@product.CreatedBy</small>
                                </td>

                                <!-- Actions -->
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination (Optional) -->
        <nav class="mt-4" aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

